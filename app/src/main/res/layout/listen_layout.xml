<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/tv_username_highscore"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="430dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="0"
                android:id="@+id/tv_id_user"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="300dp"
                android:layout_marginBottom="20dp"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="false"
                android:textSize="35sp"
                android:gravity="center_vertical|center_horizontal"
                android:autoText="false" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="test"
                android:id="@+id/tv_username_highscore"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="75dp"
                android:layout_marginBottom="7dp"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="false"
                android:textSize="20sp"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="000"
                android:id="@+id/tv_punkte_highscore"
                android:textSize="20sp"
                android:textIsSelectable="false"
                android:layout_marginLeft="250dp"
                android:singleLine="false"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text Small Text Small Text "
                android:id="@+id/tv_datum"
                android:gravity="center_horizontal"
                android:textSize="12dip"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="120dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="40dp"/>

        </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
