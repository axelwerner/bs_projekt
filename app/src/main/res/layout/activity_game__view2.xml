<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Game_View2"
    android:id="@+id/relative_layout_game">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_nummer_erreichen"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:text="0"
        android:textSize="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button_minus"
        android:layout_toStartOf="@+id/tv_nummer_erreichen"
        android:layout_marginBottom="43dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/tv_nummer_erreichen" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button_plus"
        android:layout_alignTop="@+id/button_minus"
        android:layout_toRightOf="@+id/tv_nummer_erreichen"
        android:layout_toEndOf="@+id/tv_nummer_erreichen" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tv_finish"
        android:layout_below="@+id/tv_nummer_erreichen"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="asd"
        android:singleLine="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tv_nummer_start"
        android:layout_below="@+id/tv_finish"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="0"
        android:textSize="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tv_punkteanzahl"
        android:text="0"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/tv_nummer_erreichen"
        android:layout_alignStart="@+id/tv_nummer_erreichen"
        android:layout_marginTop="-10dp" />

    TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="0"
    android:id="@+id/tv_countdown"
    android:textSize="100dp"
    android:singleLine="false"
    android:layout_alignTop="@+id/tv_nummer_erreichen"
    android:layout_alignLeft="@+id/button_minus"
    android:layout_alignStart="@+id/button_minus" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:progressDrawable="@drawable/customprogressbar"
        android:minHeight="40dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="60dp" />

</RelativeLayout>
